@{
    ViewData["Title"] = "Approval Page";
}

<div class="approval-page">
    <!-- Container for the Table and Lecturer Info -->
    <div class="approval-content-container">
        <!-- Table for Claims -->
        <div class="approval-claim-list-box">
            <table class="approval-claim-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Claim Date</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>12345</td>
                        <td>2024-09-01</td>
                        <td>Document1.pdf</td>
                    </tr>
                    <tr>
                        <td>12346</td>
                        <td>2024-09-05</td>
                        <td>Document2.pdf</td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>

        <!-- Lecturer and Manager Information -->
        <div class="approval-lecturer-info">
            <div class="approval-info-item">Lecturer ID: <span class="approval-info-value">6789</span></div>
            <div class="approval-info-item">Full Name: <span class="approval-info-value">John Doe</span></div>
            <div class="approval-info-item">Hourly Rate: <span class="approval-info-value">$50/hr</span></div>
            <div class="approval-info-item">Department: <span class="approval-info-value">Computer Science</span></div>
            <div class="approval-info-item">Campus: <span class="approval-info-value">Main Campus</span></div>

            <!-- First Divider -->
            <div class="approval-line-divider-1"></div>

            <div class="approval-info-item">Regular Hours Worked: <span class="approval-info-value">40 hrs</span></div>
            <div class="approval-info-item">Overtime Hours Worked: <span class="approval-info-value">5 hrs</span></div>
            <div class="approval-info-item">Total Hours Worked: <span class="approval-info-value">45 hrs</span></div>

            <!-- Second Divider -->
            <div class="approval-line-divider-2"></div>

            <div class="approval-info-item">Regular Pay: <span class="approval-info-value">$2000</span></div>
            <div class="approval-info-item">Overtime Pay: <span class="approval-info-value">$250</span></div>
            <div class="approval-info-item">Total Pay: <span class="approval-info-value">$2250</span></div>
            
            <!-- Additional Manager Information -->
            <div class="approval-line-divider-3"></div>
            <div class="approval-info-item">Manager ID: <span class="approval-info-value">1234</span></div>
            <div class="approval-info-item">Manager Name: <span class="approval-info-value">Alice Smith</span></div>
            <div class="approval-info-item">Approval Date: <span class="approval-info-value">2024-09-10</span></div>
        </div>
    </div>

    <!-- Approve/Reject Buttons -->
    <div class="approval-approve-group">
        <div class="approval-approve-button">Approve</div>
    </div>

    <div class="approval-reject-group">
        <div class="approval-reject-button">Reject</div>
    </div>
</div>