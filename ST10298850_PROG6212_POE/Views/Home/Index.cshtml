@{
    ViewData["Title"] = "Home Page";
}

<div class="landing-page">
    <h1>Welcome to the Claim Wages System</h1>
    <p>Please select your role to continue:</p>

    <form asp-controller="Role" asp-action="SelectRole" id="role-selection-form" method="post">
        <!-- Role Selection -->
        <div class="role-selection-group">
            <label for="role" class="role-label">Select Role:</label>
            <select id="role" name="role" class="form-control" onchange="toggleLecturerIdInput()">
                <option value="">--Select Role--</option>
                <option value="Lecturer">Lecturer</option>
                <option value="AcademicManager">Academic Manager</option>
                <option value="Coordinator">Coordinator</option>
            </select>
        </div>

        <!-- Lecturer ID Input (hidden by default) -->
        <div id="lecturer-id-group" class="lecturer-id-group" style="display: none;">
            <label for="lecturerId" class="lecturer-id-label">Lecturer ID:</label>
            <input type="text" id="lecturerId" name="lecturerId" class="form-control" />
        </div>

        <!-- Submit Button -->
        <div class="submit-button-group">
            <button type="submit" class="btn-submit">Continue</button>
        </div>
    </form>
</div>

<script>
    function toggleLecturerIdInput() {
        var role = document.getElementById("role").value;
        var lecturerIdGroup = document.getElementById("lecturer-id-group");
        if (role === "Lecturer") {
            lecturerIdGroup.style.display = "block";
        } else {
            lecturerIdGroup.style.display = "none";
        }
    }
</script>
