@{
    ViewData["Title"] = "Verification Page";
}

<div class="verification-page">
    <!-- Container for the Table and Lecturer Info -->
    <div class="verification-content-container">
        <!-- Table for Claims -->
        <div class="verification-claim-list-box">
            <table class="verification-claim-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Claim Date</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>12345</td>
                        <td>2024-09-01</td>
                        <td>Document1.pdf</td>
                    </tr>
                    <tr>
                        <td>12346</td>
                        <td>2024-09-05</td>
                        <td>Document2.pdf</td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>

        <!-- Lecturer Information -->
        <div class="verification-lecturer-info">
            <div class="verification-info-item">Lecturer ID: <span class="verification-info-value">6789</span></div>
            <div class="verification-info-item">Full Name: <span class="verification-info-value">John Doe</span></div>
            <div class="verification-info-item">Hourly Rate: <span class="verification-info-value">$50/hr</span></div>
            <div class="verification-info-item">Department: <span class="verification-info-value">Computer Science</span></div>
            <div class="verification-info-item">Campus: <span class="verification-info-value">Main Campus</span></div>

            <!-- First Divider -->
            <div class="verification-line-divider-1"></div>

            <div class="verification-info-item">Regular Hours Worked: <span class="verification-info-value">40 hrs</span></div>
            <div class="verification-info-item">Overtime Hours Worked: <span class="verification-info-value">5 hrs</span></div>
            <div class="verification-info-item">Total Hours Worked: <span class="verification-info-value">45 hrs</span></div>

            <!-- Second Divider -->
            <div class="verification-line-divider-2"></div>

            <div class="verification-info-item">Regular Pay: <span class="verification-info-value">$2000</span></div>
            <div class="verification-info-item">Overtime Pay: <span class="verification-info-value">$250</span></div>
            <div class="verification-info-item">Total Pay: <span class="verification-info-value">$2250</span></div>
        </div>
    </div>

    <!-- Approve/Reject Buttons -->
    <div class="verification-approve-group">
        <div class="verification-approve-button">Approve</div>
    </div>

    <div class="verification-reject-group">
        <div class="verification-reject-button">Reject</div>
    </div>
</div>